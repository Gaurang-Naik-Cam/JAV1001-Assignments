<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtViewAppName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Contacts App"
        android:textColor="@color/black"
        android:textSize="26dp"
        android:fontFamily="sans-serif-black"/>

    <EditText
        android:id="@+id/txtCustomerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtViewAppName"
        android:text=""
        android:hint="Name"
        android:textColor="@color/black"
        android:textColorHint="@color/black">
    </EditText>
    <EditText
        android:id="@+id/txtInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCustomerName"
        android:text=""
        android:hint="Phone number"
        android:textColor="@color/black"
        android:textColorHint="@color/black">
    </EditText>

    <LinearLayout
        android:id="@+id/linearLayoutItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtInput"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:text="Save" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtviewMyList"
        android:layout_below="@id/linearLayoutItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="My List"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <ListView
        android:id="@+id/ListView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/txtviewMyList"
        android:choiceMode="multipleChoice">

    </ListView>

</RelativeLayout>
